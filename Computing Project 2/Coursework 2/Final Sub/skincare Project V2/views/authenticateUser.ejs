     <!-- nav bar script-->
    <script>
        var myNav = document.getElementById('myNav');
        window.onscroll = function() {
            "use strict";
            if (document.body.scrollTop >= 100 || document.documentElement.scrollTop >= 100) {
                myNav.classList.add("fixed-top");
                myNav.classList.add("bg-white");
                myNav.classList.remove("absolute-top");
                myNav.classList.remove("bg-transparent");
            } else {
                myNav.classList.add("absolute-top");
                myNav.classList.add("bg-transparent");
                myNav.classList.remove("fixed-top");
                myNav.classList.remove("bg-white");
            }
        };
    </script>

